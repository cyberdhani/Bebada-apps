<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59ABE3"
    tools:context="app.bebada.dhani.bebada.Hasil_kuis_sunda">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/cekjawaban"/>

            <TextView
                android:id="@+id/hasilsunda"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btnmengulang"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:text="Mengulang ?"
                android:background="#E87E04"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/btnkeluar"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:text="Keluar"
                android:background="#E87E04"
                android:textColor="#fff"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
